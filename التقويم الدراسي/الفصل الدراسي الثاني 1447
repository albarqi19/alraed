      const ws2 = XLSX.utils.json_to_sheet(summaryData);
      XLSX.utils.book_append_sheet(wb, ws2, 'ملخص التقويم');
      
      XLSX.writeFile(wb, 'التقويم_الدراسي_الفصل_الثاني_1447-1448هـ.xlsx');
      
      setStatus('تم التحميل بنجاح! ✓');
      setTimeout(() => setStatus(''), 3000);
    } catch (error) {
      setStatus('حدث خطأ في التصدير');
      console.error(error);
    }
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-green-50 to-teal-100 p-6" dir="rtl">
      <div className="max-w-7xl mx-auto">
        <div className="bg-white rounded-2xl shadow-xl p-8 mb-6">
          <div className="flex items-center justify-between mb-6">
            <div className="flex items-center gap-4">
              <div className="bg-teal-600 p-3 rounded-xl">
                <Calendar className="w-8 h-8 text-white" />
              </div>
              <div>
                <h1 className="text-3xl font-bold text-gray-800">
                  التقويم الدراسي للفصل الثاني
                </h1>
                <p className="text-gray-600 mt-1">
                  العام الدراسي 1447/1448 هـ (2025/2026 م)
                </p>
              </div>
            </div>
            <button
              onClick={exportToExcel}
              className="flex items-center gap-2 bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-xl font-bold transition-all shadow-lg hover:shadow-xl"
            >
              <Download className="w-5 h-5" />
              تحميل Excel
            </button>
          </div>
          
          {status && (
            <div className={`p-4 rounded-lg ${status.includes('خطأ') ? 'bg-red-100 text-red-700' : 'bg-green-100 text-green-700'}`}>
              {status}
            </div>
          )}
        </div>

        <div className="grid md:grid-cols-3 gap-4 mb-6">
          <div className="bg-white rounded-xl shadow-lg p-6">
            <h3 className="text-lg font-bold text-teal-600 mb-2">📅 بداية الدراسة</h3>
            <p className="text-gray-700">07/29/1447 هـ</p>
            <p className="text-gray-600 text-sm">18/01/2026 م</p>
          </div>
          
          <div className="bg-white rounded-xl shadow-lg p-6">
            <h3 className="text-lg font-bold text-purple-600 mb-2">🌙 إجازة عيد الفطر</h3>
            <p className="text-gray-700">09/16 - 10/09</p>
            <p className="text-gray-600 text-sm">05/03 - 28/03/2026</p>
          </div>
          
          <div className="bg-white rounded-xl shadow-lg p-6">
            <h3 className="text-lg font-bold text-orange-600 mb-2">🕌 إجازة عيد الأضحى</h3>
            <p className="text-gray-700">12/14 - 12/18</p>
            <p className="text-gray-600 text-sm">31/05 - 04/06/2026</p>
          </div>
        </div>

        <div className="bg-white rounded-2xl shadow-xl overflow-hidden">
          <div className="overflow-x-auto">
            <table className="w-full">
              <thead className="bg-teal-600 text-white">
                <tr>
                  <th className="px-4 py-3 text-right">الأسبوع</th>
                  <th className="px-4 py-3 text-right">اليوم</th>
                  <th className="px-4 py-3 text-right">التاريخ الهجري</th>
                  <th className="px-4 py-3 text-right">الشهر الهجري</th>
                  <th className="px-4 py-3 text-right">التاريخ الميلادي</th>
                  <th className="px-4 py-3 text-right">الشهر الميلادي</th>
                  <th className="px-4 py-3 text-right">ملاحظات</th>
                </tr>
              </thead>
              <tbody>
                {calendarData.map((row, index) => (
                  <tr 
                    key={index} 
                    className={`border-b ${row.note ? 'bg-yellow-50' : index % 2 === 0 ? 'bg-gray-50' : 'bg-white'} hover:bg-teal-50 transition-colors`}
                  >
                    <td className="px-4 py-3 font-semibold text-teal-600">
                      {index % 5 === 0 ? `الأسبوع ${row.week}` : ''}
                    </td>
                    <td className="px-4 py-3">{row.day}</td>
                    <td className="px-4 py-3 font-mono">{row.hijri}/{row.hijriYear}</td>
                    <td className="px-4 py-3 text-sm">{row.month}</td>
                    <td className="px-4 py-3 font-mono">{row.gregorian}/{row.gregYear}</td>
                    <td className="px-4 py-3 text-sm">{row.gregMonth}</td>
                    <td className="px-4 py-3 text-sm">
                      {row.note && (
                        <span className="bg-yellow-200 text-yellow-800 px-2 py-1 rounded-full text-xs font-semibold">
                          {row.note}
                        </span>
                      )}
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>

        <div className="mt-6 text-center text-gray-600">
          <p className="text-sm">
            💡 اضغط على زر "تحميل Excel" للحصول على نسخة كاملة قابلة للتعديل
          </p>
        </div>
      </div>
    </div>
  );
};

export default AcademicCalendarSemester2;